<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodTruckApp.LogInPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sign in using your account:" />
            <StackLayout Orientation="Horizontal">
                <Label Text="Email:" />
                <Entry x:Name="emailField" Keyboard="Email" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Password:" />
                <Entry x:Name="password" IsPassword="True"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="messageLabel" />
            </StackLayout>
            <Button Text="login" Clicked="OnLoginButtonClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>