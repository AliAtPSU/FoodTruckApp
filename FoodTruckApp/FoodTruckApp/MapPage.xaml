<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:FoodTruckApp;assembly=FoodTruckApp"
             x:Class="FoodTruckApp.MapPage"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             Title="MapPage"
             xmlns:Ad="clr-namespace:Ads;assembly=FoodTruckApp"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:CustomMap 
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            x:Name="MyMap"
            IsShowingUser="true"
            MapType="Hybrid"/>

        <Entry Placeholder="Enter location"
            x:Name="EntryLocation"
            Margin="10"/>
        <Button Grid.Column="1" 
            Text="Go To" 
            x:Name="ButtonGoTo" 
            Clicked="OnGoToClicked"
            Margin="10"/>

